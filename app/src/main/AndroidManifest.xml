<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="shelton.c169.wgustudentplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TermList"
            android:label="@string/title_activity_term_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateTerm"
            android:label="@string/title_activity_create_term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermDetailed"
            android:label="@string/title_activity_term_detailed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseList"
            android:label="@string/title_activity_course_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateCourse"
            android:label="@string/title_activity_create_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseDetailed"
            android:label="@string/title_activity_course_detailed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NoteList"
            android:label="@string/title_activity_note_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateNote"
            android:label="@string/title_activity_create_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NoteDetailed"
            android:label="@string/title_activity_note_detailed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssessmentList"
            android:label="@string/title_activity_assessment_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateAssessment"
            android:label="@string/title_activity_create_assessment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssessmentDetailed"
            android:label="@string/title_activity_assessment_detailed"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />
    </application>

</manifest>